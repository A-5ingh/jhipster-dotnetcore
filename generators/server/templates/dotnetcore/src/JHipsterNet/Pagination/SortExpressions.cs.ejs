using System;
using System.Collections.Generic;
using System.Linq;
using System.Linq.Expressions;

namespace JHipsterNet.Pagination
{
    public class SortExpressions<TEntity>
    {
        private readonly List<SortExpression<TEntity, object>> _expressionList;

        public SortExpressions()
        {
            _expressionList = new List<SortExpression<TEntity, object>>();
        }

        public void Add(Expression<Func<TEntity, object>> expression, bool isDescending = false)
        {
            _expressionList.Add(new SortExpression<TEntity, object>
            {
                Expression = expression,
                IsDescending = isDescending
            });
        }

        internal static IQueryable<TEntity> ApplySorts(IQueryable<TEntity> query, SortExpressions<TEntity> sorts)
        {
            var isFirstSort = true;
            var validSortings = sorts.GetAll();
            IOrderedQueryable<TEntity> orderedQuery = null;

            foreach (var sort in validSortings)
            {
                orderedQuery = isFirstSort
                    ? ApplySorting(query, sort)
                    : ApplySorting(orderedQuery, sort);
                isFirstSort = false;
            }

            return orderedQuery ?? query;
        }

        private dynamic GetAll()
        {
            return _expressionList;
        }

        internal bool IsValid()
        {
            return _expressionList.Any();
        }

        private static IOrderedQueryable<TEntity> ApplySorting<TKey>(IQueryable<TEntity> query, SortExpression<TEntity, TKey> sortExpression)
        {
            return sortExpression.IsDescending
                ? query.OrderByDescending(sortExpression.Expression)
                : query.OrderBy(sortExpression.Expression);
        }

        private static IQueryable<TEntity> ApplySorting<TKey>(IOrderedQueryable<TEntity> query, SortExpression<TEntity, TKey> sortExpression)
        {
            return sortExpression.IsDescending
                ? query.ThenByDescending(sortExpression.Expression)
                : query.ThenBy(sortExpression.Expression);
        }
    }
}