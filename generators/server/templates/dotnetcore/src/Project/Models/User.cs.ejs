using System;
using System.Collections.Generic;
using System.ComponentModel.DataAnnotations;
using System.ComponentModel.DataAnnotations.Schema;
using <%= namespace %>.Models.Interfaces;
using JHipsterNet.Pagination;
using Microsoft.AspNetCore.Identity;
using Newtonsoft.Json;

namespace <%= namespace %>.Models {
    public class User : IdentityUser, IAuditedEntityBase {
        public string Login {
            get => UserName;
            set => UserName = value;
        }

        [StringLength(50)]
        [Column("first_name")]
        public string FirstName { get; set; }

        [StringLength(50)]
        [Column("last_name")]
        public string LastName { get; set; }

        [Required] public bool Activated { get; set; }

        [StringLength(6, MinimumLength = 2)]
        [Column("lang_key")]
        public string LangKey { get; set; }

        [Url]
        [StringLength(256)]
        [Column("image_url")]
        public string ImageUrl { get; set; }

        [StringLength(20)]
        [Column("activation_key")]
        [JsonIgnore]
        public string ActivationKey { get; set; }

        [StringLength(20)]
        [Column("reset_key")]
        [JsonIgnore]
        public string ResetKey { get; set; }

        [Column("reset_date")] public DateTime? ResetDate { get; set; }

        [JsonIgnore] public virtual ICollection<UserRole> UserRoles { get; set; }

        public string CreatedBy { get; set; }
        public DateTime CreatedDate { get; set; }
        public string LastModifiedBy { get; set; }
        public DateTime LastModifiedDate { get; set; }

        public override bool Equals(object obj)
        {
            if (this == obj) return true;

            if (obj == null || GetType() != obj.GetType()) return false;

            var user = obj as User;
            if (user?.Id == null || Id == null) return false;

            return EqualityComparer<string>.Default.Equals(Id, user.Id);
        }

        public override int GetHashCode()
        {
            return HashCode.Combine(Id);
        }

        public override string ToString()
        {
            return "User{" +
                   $"ID='{Id}'" +
                   $", Login='{Login}'" +
                   $", FirstName='{FirstName}'" +
                   $", LastName='{LastName}'" +
                   $", Email='{Email}'" +
                   $", ImageUrl='{ImageUrl}'" +
                   $", Activated='{Activated}'" +
                   $", LangKey='{LangKey}'" +
                   $", ActivationKey='{ActivationKey}'" +
                   "}";
        }
        
        public static SortExpressions<User> GetSortExpressions(Sort sort)
        {
            var sortExpressions = new SortExpressions<User>();
            if (sort != null && sort.IsSorted())
            {
                IList<Order> orders = sort.Orders;
                foreach (var order in orders)
                {
                    AddSortExpression(sortExpressions, order);                    
                }

            }
            return sortExpressions;
        }

        private static void AddSortExpression(SortExpressions<User> sortExpressions, Order order)
        {
            if (sortExpressions == null || order == null || order.Property == null) return;
            bool isDescending = order.Direction.IsDescending();
            switch (order.Property.ToLower())
            {
                case "id":
                    {
                        sortExpressions.Add(x => x.Id, isDescending);
                        break;
                    }

                case "login":
                    {
                        sortExpressions.Add(x => x.UserName, isDescending);
                        break;
                    }

                case "firstname":
                    {
                        sortExpressions.Add(x => x.FirstName, isDescending);
                        break;
                    }

                case "lastname":
                    {
                        sortExpressions.Add(x => x.LastName, isDescending);
                        break;
                    }

                case "email":
                    {
                        sortExpressions.Add(x => x.Email, isDescending);
                        break;
                    }

                case "imageurl":
                    {
                        sortExpressions.Add(x => x.ImageUrl, isDescending);
                        break;
                    }

                case "activated":
                    {
                        sortExpressions.Add(x => x.Activated, isDescending);
                        break;
                    }

                case "langkey":
                    {
                        sortExpressions.Add(x => x.LangKey, isDescending);
                        break;
                    }

                case "createdby":
                    {
                        sortExpressions.Add(x => x.CreatedBy, isDescending);
                        break;
                    }

                case "createddate":
                    {
                        sortExpressions.Add(x => x.CreatedDate, isDescending);
                        break;
                    }

                case "lastmodifiedby":
                    {
                        sortExpressions.Add(x => x.LastModifiedBy, isDescending);
                        break;
                    }

                case "lastmodifieddate":
                    {
                        sortExpressions.Add(x => x.LastModifiedDate, isDescending);
                        break;
                    }

                default:
                    break;
            }
        }
    }
}
